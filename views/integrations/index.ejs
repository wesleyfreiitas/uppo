<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>

<div id="main">


    <div class="row">
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">WhatsApp + Siprov</h5>
                    <p class="card-text">Programe notificações de cobrança com a API da SIPROV para serem
                        disparadas via
                        WhatsApp</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">Ativar</button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <!-- <h5 class="modal-title" id="exampleModalLabel">Minhas automações</h5> -->
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="/integrations/create">
                                        <div class="row g-3">
                                            <div class="col">
                                                <input type="text" class="form-control" placeholder="Dia do mês"
                                                    name="dia">
                                            </div>
                                            <div class="col">
                                                <input type="text" class="form-control" placeholder="Hora do dia"
                                                    name="hora">
                                            </div>
                                        </div><br>
                                        <div class="row g-3">
                                            <div class="col">
                                                <input type="text" class="form-control" placeholder="Token SIPROV"
                                                    name="t_siprov">
                                            </div>
                                            <div class="col">
                                                <input type="text" class="form-control" placeholder="Descrição"
                                                    name="description">
                                            </div>
                                        </div><br>
                                        <!-- INICIO -->
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch"
                                                id="flexSwitchCheckDefault">
                                            <label class="form-check-label" for="flexSwitchCheckDefault">UPPON</label>
                                        </div>

                                        <div id="dropdownDefault" style="display: none;">
                                            <input type="text" class="form-control" placeholder="ID do canal"
                                                name="canal">
                                            <input type="text" class="form-control" placeholder="URL" name="url">
                                            <input type="text" class="form-control" placeholder="Token do agente"
                                                name="t_agente">
                                            <div class="row g-3">
                                                <div class="col">
                                                    <textarea type="textarea" rows="3" class="form-control"
                                                        placeholder="Escreva sua mensagem" name="message"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <script>
                                            document.getElementById("flexSwitchCheckDefault").addEventListener("change",
                                                function () {
                                                    var dropdownDefault = document.getElementById(
                                                    "dropdownDefault");
                                                    if (this.checked) {
                                                        dropdownDefault.style.display = "block";
                                                    } else {
                                                        dropdownDefault.style.display = "none";
                                                    }
                                                });
                                        </script>
                                        <!-- FIM -->

                                        <!-- INICIO -->
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch"
                                                id="flexSwitchCheckDefaultUPP">
                                            <label class="form-check-label"
                                                for="flexSwitchCheckDefaultUPP">UPPCHANNEL</label>
                                        </div>

                                        <div id="dropdownDefaultUPP" style="display: none;">
                                            <input type="text" class="form-control" placeholder="ID do canal"
                                                name="canal">
                                            <input type="text" class="form-control" placeholder="URL" name="url">
                                            <input type="text" class="form-control" placeholder="Token do agente"
                                                name="t_agente">
                                            <input type="text" class="form-control" placeholder="Nome do HSM ou TM"
                                                name="hsm">

                                        </div>

                                        <script>
                                            document.getElementById("flexSwitchCheckDefaultUPP").addEventListener(
                                                "change",
                                                function () {
                                                    var dropdownDefault = document.getElementById(
                                                        "dropdownDefaultUPP");
                                                    if (this.checked) {
                                                        dropdownDefault.style.display = "block";
                                                    } else {
                                                        dropdownDefault.style.display = "none";
                                                    }
                                                });
                                        </script>
                                        <!-- FIM -->

                                        <!-- INICIO -->
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch"
                                                id="flexSwitchCheckDefaultWPP">
                                            <label class="form-check-label"
                                                for="flexSwitchCheckDefaultWPP">WPPChat</label>
                                        </div>

                                        <div id="dropdownDefaultWPP" style="display: none;">

                                            <input type="text" class="form-control" placeholder="Token" name="t_agente">
                                            <div class="row g-3">
                                                <div class="col">
                                                    <textarea type="textarea" rows="3" class="form-control"
                                                        placeholder="Escreva sua mensagem" name="message"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <script>
                                            document.getElementById("flexSwitchCheckDefaultWPP").addEventListener(
                                                "change",
                                                function () {
                                                    var dropdownDefault = document.getElementById(
                                                        "dropdownDefaultWPP");
                                                    if (this.checked) {
                                                        dropdownDefault.style.display = "block";
                                                    } else {
                                                        dropdownDefault.style.display = "none";
                                                    }
                                                });
                                        </script>
                                        <!-- FIM -->

                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
