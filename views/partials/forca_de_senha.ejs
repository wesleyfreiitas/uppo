<%- include('../partials/header'); -%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

    <style>
        .valid {
            border-color: green !important;
            /* Define a cor do sombreado como verde */
        }

        /* Estilo para destacar o campo quando o número estiver correto */
        .numero-correto {
            border: 2px solid green;
            /* Por exemplo, destaca a borda com a cor verde */
        }

        /* Estilo para o ícone de verificação */
        .input-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .container-fluid {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid lightgrey;
            padding: 16px;
            -webkit-box-shadow: 0px 0px 12px 2px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 0px 0px 12px 2px rgba(0, 0, 0, 0.75);
            box-shadow: 0px 0px 12px 2px rgba(0, 0, 0, 0.75);
        }

        .input-group {
            width: 80%;
            height: auto;
            padding: 4px;
        }

        .progress {
            height: 4px;
        }

        .progress-bar {
            background-color: green;
        }

        /* Estilo para o ícone de verificação */
        .check-icon {
            color: green;
            /* Cor do ícone de verificação */
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
    </style>
    <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0"
        aria-valuemax="100">
        <div class="progress-bar" id="forca" style="width: 0%">
        </div>
    </div>

    <%- include('../partials/footer'); -%>