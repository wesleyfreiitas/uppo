                    <div class="input-container">
                        <input class="form-control" name="phone" id="phoneInput" type="text"
                            placeholder="Informe o WhatsApp" maxlength="17"><br>
                        <span class="check-icon" id="checkIcon"></span>
                    </div>
                    <div>
                        <input class="form-control" name="password" id="senha" type="password" placeholder="Senha">
                        <%- include('../partials/forca_de_senha'); -%>
                    </div><br>
                    <button type="submit" class="btn btn-secondary btn-block">Criar conta</button>
                    <a href="/login">JÃ¡ tenho conta</button>
                </form>
            </div>
        </div>
