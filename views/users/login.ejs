<%- include('../partials/header'); -%>

<div class="container">
    <!-- <hr>  -->
    <div class="card mt-5">
        <div class="card-header">
            <h2 style="text-align: center; color: blueviolet;">Login</h2>
        </div>
        <div class="card-body">
            <form action="/authenticate" method="POST">
                <input class="form-control" name="email" type="email" placeholder="email@exemplo.com"><br>
                <input class="form-control" name="password" type="password" placeholder="******"><br>
                <button type="submit" class="btn btn-secondary btn-block">Logar</button>
            </form>
            <div style="text-align: center;"><a href="/remember">Esqueceu a senha?</a> <a href="/signup">Signup</a></div>
        </div>
    </div>
</div>

